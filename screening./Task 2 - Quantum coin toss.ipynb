from qiskit.circuit import ParameterVector
bell2 = QuantumCircuit(2, 2)
params = ParameterVector('$\\theta$', 2)
bell2.rx(params[0], 0)
bell2.rx(params[1], 1)
bell2.cnot(0, 1)
bell2.measure([0, 1], [0, 1])
bell2.draw()
